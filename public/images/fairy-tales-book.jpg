<svg width="400" height="300" viewBox="0 0 400 300" xmlns="http://www.w3.org/2000/svg">
  <rect width="400" height="300" fill="#fef7ff"/>
  
  <!-- Книга -->
  <rect x="120" y="60" width="160" height="200" fill="#7c3aed" stroke="#5b21b6" stroke-width="2"/>
  
  <!-- Страницы -->
  <rect x="125" y="65" width="150" height="190" fill="#ffffff"/>
  
  <!-- Обложка книги -->
  <rect x="120" y="60" width="160" height="40" fill="#a855f7"/>
  
  <!-- Заголовок на обложке -->
  <text x="200" y="85" text-anchor="middle" font-family="Arial, sans-serif" font-size="16" font-weight="bold" fill="#ffffff">Сказки</text>
  
  <!-- Иллюстрация в книге -->
  <circle cx="180" cy="140" r="20" fill="#fbbf24"/>
  <path d="M 160 160 Q 180 180 200 160" stroke="#f59e0b" stroke-width="3" fill="none"/>
  <circle cx="170" cy="130" r="3" fill="#1f2937"/>
  <circle cx="190" cy="130" r="3" fill="#1f2937"/>
  
  <!-- Текст в книге -->
  <rect x="130" y="200" width="140" height="3" fill="#6b7280"/>
  <rect x="130" y="210" width="120" height="3" fill="#6b7280"/>
  <rect x="130" y="220" width="100" height="3" fill="#6b7280"/>
  
  <!-- Декоративные элементы -->
  <circle cx="100" cy="100" r="15" fill="#ec4899" opacity="0.3"/>
  <circle cx="300" cy="150" r="20" fill="#06b6d4" opacity="0.3"/>
  <circle cx="80" cy="200" r="12" fill="#10b981" opacity="0.3"/>
  
  <text x="200" y="280" text-anchor="middle" font-family="Arial, sans-serif" font-size="20" font-weight="bold" fill="#7c3aed">Книга сказок</text>
</svg>
